<form class="navbar-form navbar-left navbar-search method="post" action="/search">
  <div class="input-group">
    <input type="text" name="q" class="form-control" placeholder="Search">
    <span class="input-group-btn">
      <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-search"></span></button>
    </span>
  </div>
</form>

<nav>
  <ul class="nav nav-pills pull-right">
    <li><a class="categories-dropdown dropdown-toggle" data-toggle="dropdown" href="#"> Categories <span class="glyphicon glyphicon-chevron-down"></span> </a>
      <ul class="dropdown-menu">
        <% for (var i = 0; i < categories.length; i++) { %>
          <li><a href="/products/<%= categories[i]._id%>"><%= categories[i].name %></a></li>
        <% } %>
      </ul>
    </li>

    <% if (!user) { %>
    <!--<li role="presentation"><a href="/">Home</a></li>-->
    <li role="presentation"><a href="/login">Login</a></li>
    <li role="presentation" class="active"><a href="/signup">Signup</a></li>

    <% } else { %>
    <!--<li role="presentation"><a href="/">Home</a></li>-->
    <li role="presentation"><a href="/profile"><%= user.profile.name %></a></li>
    <li role="presentation" class="active"><a href="/logout">Logout</a></li>
    <% } %>

    <% if (user) { %>
      <li><a href="/cart" class="glyphicon glyphicon-shopping-cart">
        <span class="badge"><%= cart %></span>
      </a></li>
    <% } else { %>
      <li><a href="/cart" class="nav_cart glyphicon glyphicon-shopping-cart">
        <span class="cart_length">0</span>
      </a></li>
    <% } %>

  </ul>
</nav>
<div class="clearfix"></div>