<% layout('layout') %>

<div class="jumbotron">
  <h1>Quirkyâ€™s Coffee</h1>
  <p class="lead">Fresh roasted coffee, every day.</p>
  <p><a class="btn btn-lg btn-success" href="/signup" role="button">Shop now</a></p>
</div>

<div class="container category-container">
	<div class="row">
		<% for (var i = 0; i < products.length; i++) { %>
		<div class="col-md-4">
			<a href="/product/<%= products[i]._id %>">
				<div class="thumbnail">
					<img src="<%= products[i].image %>">
					<div class="caption">
						<h3><%= products[i].name %></h3>
						<p><%= products[i].category.name %></p>
						<p>$<%= products[i].price %></p>
					</div>
				</div>
			</a>
		</div>
		<% } %>

		<ul class="pagination text-center">
			<li>
				<% for(var i = 1; i <= pages; i++) { %>
					<% if (i === 1) { %>
						<li><a href="/"><%= i %></a>
					<% } else { %>
						<li><a href="/page/<%= i %>"><%= i %></a>
					<% } %>
				<% } %>
			</li>
		</ul>
	</div>
</div>